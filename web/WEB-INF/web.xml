<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

  <display-name>EduFlow</display-name>

  <filter>
    <filter-name>SessionFilter</filter-name>
    <filter-class>com.eduflow.servlet.SessionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SessionFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>AuthServlet</servlet-name>
    <servlet-class>com.eduflow.servlet.AuthServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AuthServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>StudentScheduleServlet</servlet-name>
    <servlet-class>com.eduflow.servlet.StudentScheduleServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StudentScheduleServlet</servlet-name>
    <url-pattern>/student/schedule</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>TeacherScheduleRequestServlet</servlet-name>
    <servlet-class>com.eduflow.servlet.TeacherScheduleRequestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TeacherScheduleRequestServlet</servlet-name>
    <url-pattern>/teacher/request</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AdminScheduleApprovalServlet</servlet-name>
    <servlet-class>com.eduflow.servlet.AdminScheduleApprovalServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminScheduleApprovalServlet</servlet-name>
    <url-pattern>/admin/approval</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AdminApiServlet</servlet-name>
    <servlet-class>com.eduflow.servlet.AdminApiServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminApiServlet</servlet-name>
    <url-pattern>/announcements</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminApiServlet</servlet-name>
    <url-pattern>/day-settings</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DataBrowserServlet</servlet-name>
    <servlet-class>com.eduflow.servlet.DataBrowserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DataBrowserServlet</servlet-name>
    <url-pattern>/admin/data</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
</web-app>
